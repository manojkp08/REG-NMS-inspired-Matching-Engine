# GoQuant Matching Engine Configuration

# Server Configuration
REST_HOST=0.0.0.0
REST_PORT=8000
WS_HOST=0.0.0.0
WS_PORT=8080

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance
ENABLE_METRICS=true
METRICS_PORT=9090

# Persistence
ENABLE_WAL=true
WAL_FILE_PATH=data/wal/orders.log
SNAPSHOT_INTERVAL_SEC=300

# Fees
DEFAULT_MAKER_FEE=0.001
DEFAULT_TAKER_FEE=0.002

# Trading
DEFAULT_SYMBOL=BTC-USDT
MAX_ORDER_QUANTITY=1000000